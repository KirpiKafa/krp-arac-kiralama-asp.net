            </tr>

        </table>

    }

    <p>
        @ViewData["sonuc"]
    </p>

    <p>
        @Html.ActionLink("Kayıt Ol", "Kayit")
        @Html.ActionLink("Araçlar", "Index", "Vehicle")
    </p>
</body>
</html>
