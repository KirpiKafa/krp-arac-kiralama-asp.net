    @using (Html.BeginForm())
    {
        <table border="1" cellpadding="5" cellspacing="0" width="500">

            <tr>
                <td width="%40">Tc Kimlik No</td>
                <td><input type="text" name="tc" size="10" /></td>
            </tr>

            <tr>
